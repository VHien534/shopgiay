@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <a href="@Url.Action("ProductFilter", "Product_63132041", new { categoryName = item.TenLoai })"
           class="category-link flex rounded-md items-center cursor-pointer justify-between py-2 px-4 mb-3 bg-white hover:bg-blue-200 duration-200  bg-opacity-50 font-heading font-medium">
            <span class="text-lg">@item.TenLoai</span> >
        </a>
    }
}
else
{
    <p>không có danh mục nào cả???</p>
}
