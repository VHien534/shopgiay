@model WebBanGiay.Models.SanPham

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 800px;"> <!-- Giới hạn chiều ngang -->
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
        </div>
        <div class="card-body">
            <div class="row align-items-center">         
                <!-- Thông tin sản phẩm -->
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-5 font-weight-bold mb-2">Mã sản phẩm:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.MaSP)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Tên sản phẩm:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.TenSP)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Mô tả:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.MoTa)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Giá tiền:</dt>
                        <dd class="col-sm-7 mb-2">@string.Format("{0:#,##0}đ", Model.GiaTien)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Số lượng:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.SoLuong)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Trạng thái:</dt>
                        <dd class="col-sm-7 mb-2">
                            @if (Model.TrangThai.HasValue)
                            {
                                @Html.Raw(Model.TrangThai.Value ? "Còn hàng" : "Hết hàng")
                            }
                            else
                            {
                                @Html.Raw("Không xác định")
                            }
                        </dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Loại sản phẩm:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.LoaiSanPham.TenLoai)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Nhà cung cấp:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.NhaCungCap.TenNCC)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Nút điều hướng -->
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4">Xóa</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-warning px-4 ml-2" })
            }
        </div>
    </div>
</div>
