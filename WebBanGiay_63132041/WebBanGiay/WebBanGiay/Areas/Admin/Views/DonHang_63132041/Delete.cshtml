@model WebBanGiay.Models.DonHang

@{
    ViewBag.Title = "Xóa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 700px;">
        <!-- Giới hạn chiều ngang -->
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Bạn có chắc chắn muốn xóa đơn hàng này?</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-5 font-weight-bold mb-2">Mã đơn hàng:</dt>
                <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.MaDH)</dd>
                <hr class="w-100 my-1" />

                <dt class="col-sm-5 font-weight-bold mb-2">Mã người dùng:</dt>
                <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.MaNguoiDung)</dd>
                <hr class="w-100 my-1" />

                <dt class="col-sm-5 font-weight-bold mb-2">Tên người dùng:</dt>
                <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.NguoiDung.HoTenND)</dd>
                <hr class="w-100 my-1" />

                <dt class="col-sm-5 font-weight-bold mb-2">Địa chỉ giao hàng:</dt>
                <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.DiaChiDH)</dd>
                <hr class="w-100 my-1" />

                <dt class="col-sm-5 font-weight-bold mb-2">Ngày đặt:</dt>
                <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.NgayDat)</dd>
                <hr class="w-100 my-1" />

                <dt class="col-sm-5 font-weight-bold mb-2">Tình trạng:</dt>
                <dd class="col-sm-7 mb-2">
                    @if (Model.TinhTrang.HasValue)
                    {
                        @Html.Raw(Model.TinhTrang.Value ? "Đã xác nhận" : "Chờ xác nhận")
                    }
                    else
                    {
                        @Html.Raw("Không xác định")
                    }
                </dd>
            </dl>
        </div>

        <!-- Nút điều hướng -->
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4">Xóa</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-warning px-4 ml-2" })
            }
        </div>
    </div>
</div>
