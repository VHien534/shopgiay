@model WebBanGiay.Models.DonHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-between items-center py-4">
    <h2 class="font-bold text-xl ">Thêm sản đơn hàng mới</h2>
</div>

@using (Html.BeginForm("Create", "DonHang_63132041", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-6 md:flex md:flex-col">
            <div class="">
                @Html.LabelFor(model => model.MaDH,"Mã đơn hàng", htmlAttributes: new { @class = "block text-gray-500 font-bold text-lg md:text-left mb-1 md:mb-0 pr-4" })
            </div>
            <div class="">
                <input type="text" value="@ViewBag.MaDH" disabled readonly class="bg-gray-200 appearance-none border-2 h-[45px] border-gray-300 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" />
                @Html.ValidationMessageFor(model => model.MaDH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-6 md:flex md:flex-col">
            <p class="block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4">Mã người dùng</p>
            <div class="">
                @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control px-2" })
                @Html.ValidationMessageFor(model => model.NguoiDung.MaNguoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-6 md:flex md:flex-col">
            <div class="">
                @Html.LabelFor(model => model.DiaChiDH,"Địa chỉ đơn hàng", htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
            </div>
            <div class="">
                @Html.EditorFor(model => model.DiaChiDH, new { htmlAttributes = new { @class = "bg-white appearance-none border-2 h-[45px] border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder = "Địa chỉ đặt hàng" } })
                @Html.ValidationMessageFor(model => model.DiaChiDH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-6 md:flex md:flex-col">
            <div class="">
                @Html.LabelFor(model => model.NgayDat,"Ngày đặt", htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
            </div>
            <div class="">
                @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "bg-white appearance-none border-2 h-[45px] border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", type = "date" } })
                @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-6 md:flex md:flex-col">
            <div>
                @Html.LabelFor(model => model.TinhTrang,"Tình trạng", htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
            </div>
            <div>
                @Html.DropDownListFor(model => model.TinhTrang, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Chờ xác nhận", Value = "false" },
                    new SelectListItem { Text = "Đã xác nhận", Value = "true" }

                }, new { @class = "form-control px-2" })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <input type="submit" value="Thêm mới" class="btn btn-primary text-white font-medium" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-danger text-white font-medium" })
        </div>
    </div>
}