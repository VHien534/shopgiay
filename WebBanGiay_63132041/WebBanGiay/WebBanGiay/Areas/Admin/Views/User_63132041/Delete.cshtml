@model WebBanGiay.Models.NguoiDung

@{
    ViewBag.Title = "Xóa thông tin người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 1000px;">
        <!-- Giới hạn chiều ngang -->
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Bạn có chắc chắn muốn xóa thông tin này?</h3>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <!-- Hình ảnh người dùng -->
                <div class="col-md-4 text-center">
                    <img src="~/Content/client/dist/img/user2-160x160.jpg" class="img-thumbnail w-100" alt="User Image">
                </div>

                <!-- Thông tin người dùng -->
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-5 font-weight-bold mb-2">Mã người dùng:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.MaNguoiDung)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Họ tên:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.HoTenND)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Tên đăng nhập:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.TenDangNhap)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Email:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.Email)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Địa chỉ:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.DiaChiND)</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Mật khẩu:</dt>
                        <dd class="col-sm-7 mb-2">******</dd>
                        <hr class="w-100 my-1" />

                        <dt class="col-sm-5 font-weight-bold mb-2">Phân quyền:</dt>
                        <dd class="col-sm-7 mb-2">@Html.DisplayFor(model => model.PhanQuyen.TenQuyen)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Nút điều hướng -->
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4">Xóa</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-warning px-4 ml-2" })
            }
        </div>
    </div>
</div>
